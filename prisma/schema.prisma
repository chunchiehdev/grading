generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GradingTask {
  id          String    @id @default(uuid())
  authorId    String
  courseId    String?
  status      String    @default("created") 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  score       Int?
  feedback    Json?     
  metadata    Json?     

  @@index([authorId])
  @@index([status])
  @@map("grading_tasks")
}